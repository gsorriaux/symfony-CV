{% extends 'base.html.twig' %}

{% block title %}Mon CV en symfo{% endblock %}

{% block body %}
<h1>Mes hobbies</h1>

<div class="row">
    {% for hobby in hobbies %}
        <div class="col-6">
            <h2>{{ hobby.title }}</h2>
            <p>{{ hobby.content }}</p>
        </div>
    {% endfor %}
</div>

<div class="row justify-content-center">
    <div class="col-4">
        <a href="/contact">
            <button type="button" class="btn btn-primary">Me contacter</button>
        </a>
    </div>
</div>
{% endblock %}
